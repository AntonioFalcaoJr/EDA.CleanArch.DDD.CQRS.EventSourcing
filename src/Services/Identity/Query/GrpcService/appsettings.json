{
  "HostOptions": {
    "ShutdownTimeout": "00:00:25"
  },
  "MassTransitHostOptions": {
    "WaitUntilStarted": true,
    "StartTimeout": "00:00:10",
    "StopTimeout": "00:00:15"
  },
  "EventBusOptions": {
    "retryLimit": 3,
    "initialInterval": "00:00:05",
    "intervalIncrement": "00:00:10"
  },
  "JwtOptions": {
    "Issuer": "ecommerce",
    "Audience": "ecommerce",
    "ExpiryMinutes": 10
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http2"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "Theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}
