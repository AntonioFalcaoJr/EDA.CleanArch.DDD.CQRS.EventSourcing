@using BlazorStrap
@using WebAPP.Abstractions

<BSPagination Align="Align.Center">
    <BSPaginationItem IsDisabled="@(Page.HasPrevious is false)" @onclick="OnMoveToPrevious">Previous</BSPaginationItem>
    @for (ushort paging = 1; paging <= Page.Number; paging++)
    {
        var current = paging;
        <BSPaginationItem @onclick=@(() => OnMoveToPage(current))>@current</BSPaginationItem>
    }
    <BSPaginationItem IsDisabled="@(Page.HasNext is false)" @onclick="OnMoveToNext">Next</BSPaginationItem>
</BSPagination>

@code {

    [Parameter]
    public Page Page { get; set; } = new();

    [Parameter]
    public Action OnMoveToPrevious { get; set; } = () => { };

    [Parameter]
    public Action OnMoveToNext { get; set; } = () => { };

    [Parameter]
    public Action<ushort> OnMoveToPage { get; set; } = _ => { };

}