        <!--EF Core-->
        <EntityFrameworkCore_Version>7.0.0-preview.7.22376.2</EntityFrameworkCore_Version>
        
        <!--gRPC-->
        <Grpc_Version>2.41.0-pre1</Grpc_Version>
        <Grpc_Tools_Version>2.49.0-pre1</Grpc_Tools_Version>
        <Google_Protobuf_Version>3.21.5</Google_Protobuf_Version>
        <Grpc_Net_Client_Version>2.48.0</Grpc_Net_Client_Version>
        <Grpc_AspNetCore_Version>2.48.0</Grpc_AspNetCore_Version>
        <Grpc_Net_ClientFactory_Version>2.48.0</Grpc_Net_ClientFactory_Version>
        <Grpc_AspNetCore_Server_ClientFactory_Version>2.48.0</Grpc_AspNetCore_Server_ClientFactory_Version>

